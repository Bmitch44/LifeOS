{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "contracts:export": "cd apps/api && uv run -q python -m scripts.export_openapi",
    "contracts:gen:web": "openapi-typescript packages/shared-contracts/openapi/openapi.json -o apps/web/src/core/api/generated/schema.ts",
    "contracts:types": "pnpm --filter web contracts:types",
    "contracts:build": "pnpm contracts:export && pnpm contracts:gen:web && pnpm contracts:types"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.11",
    "tailwindcss": "^4.1.11",
    "openapi-typescript": "^7.6.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
